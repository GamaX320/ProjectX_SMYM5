<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bryanty.projectx_smym5.CreateAccountActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_create_account"
        android:id="@+id/textView5"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Account Name"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignRight="@+id/imageButtonAddAcc"
        android:layout_alignEnd="@+id/imageButtonAddAcc"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText_AccountName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_AccountName"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_AccountAmount"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAddAcc"
        android:src="@drawable/ic_check"
        android:background="#DEDEDE"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:minWidth="80dp"
        android:minHeight="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="createAccountClicked" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCancelAcc"
        android:layout_alignBottom="@+id/imageButtonAddAcc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_cancel"
        android:background="#DEDEDE"
        android:minHeight="80dp"
        android:minWidth="80dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avatar Color"
        android:id="@+id/textView2"
        android:layout_below="@+id/editText_AccountAmount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar1"
        android:src="@drawable/ic_avatar_black_1"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar2"
        android:src="@drawable/ic_avatar_black_2"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageButtonAvatar1"
        android:layout_toEndOf="@+id/imageButtonAvatar1" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar3"
        android:src="@drawable/ic_avatar_black_3"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageButtonAvatar2"
        android:layout_toEndOf="@+id/imageButtonAvatar2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar4"
        android:src="@drawable/ic_avatar_black_4"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageButtonAvatar3"
        android:layout_toEndOf="@+id/imageButtonAvatar3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar5"
        android:src="@drawable/ic_avatar_black_5"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_above="@+id/imageButtonAvatar7"
        android:layout_toRightOf="@+id/imageButtonAvatar4"
        android:layout_toEndOf="@+id/imageButtonAvatar4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar6"
        android:src="@drawable/ic_avatar_black_6"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_alignTop="@+id/imageButtonAvatar7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAvatar7"
        android:src="@drawable/ic_avatar_black_7"
        android:background="#DEDEDE"
        android:minHeight="60dp"
        android:minWidth="60dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/imageButtonAvatar2"
        android:layout_toLeftOf="@+id/imageButtonAvatar3"
        android:layout_toStartOf="@+id/imageButtonAvatar3" />
</RelativeLayout>