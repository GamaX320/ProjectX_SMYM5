<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_acc_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:text="L"
        android:background="@drawable/ic_avatar_black_1"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:textColor="#fff"
        android:singleLine="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView_acc_name"
        android:textColor="#000"
        android:layout_alignTop="@+id/textView_acc_avatar"
        android:layout_toRightOf="@+id/textView_acc_avatar"
        android:layout_toEndOf="@+id/textView_acc_avatar"
        android:layout_marginTop="11dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/textView_acc_amount"
        android:textColor="#000"
        android:layout_below="@+id/textView_acc_name"
        android:layout_toRightOf="@+id/textView_acc_avatar"
        android:layout_toEndOf="@+id/textView_acc_avatar" />

</RelativeLayout>